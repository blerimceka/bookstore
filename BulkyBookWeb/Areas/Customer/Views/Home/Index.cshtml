@model IEnumerable<Product>

<div class="row pb-3">
    @foreach (var item in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row pt-2">
                <div class="col-12 p-1">
                    <div class="card">
                        <img src="@item.ImageUrl" class="card-img-top rounded" />
                        <div class="card-body">
                            <div class="pl-1">
                                <p class="card-title h5 text-primary">@item.Title</p>
                                <p class="card-title text-info">@item.Author</p>
                            </div>
                            <div class="pl-1">
                                <p>List Price: <strike><b>@item.ListPrice.ToString("0.00")</b></strike></p>
                            </div>
                            <div class="pl-1">
                                <p>As low as: <b>@item.Price100.ToString("0.00")</b></p>
                            </div>
                        </div>
                    </div>
                    <div>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary form-control">Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
